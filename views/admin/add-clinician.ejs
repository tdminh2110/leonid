<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <div class="w3-card-4 w3-border w3-border-teal" style="padding:2rem;margin: auto;width : 50%">
            <div class="w3-container w3-teal">
                <h2>Add a Clinician</h2>
            </div>

            <form class="w3-container" action="/admin/add-clinician" method="POST">
                <div class="m-row">
                    <label>Name</label>
                    <input class="w3-input w3-border" type="text" name="name" id="name">
                </div>
                <div class="m-row">
                    <label>Family name</label>
                    <input class="w3-input w3-border" type="text" name="family_name" id="family_name">                
                </div>
                <div class="m-row">
                    <label>Birthday</label>
                    <input class="w3-input w3-border" type="text" name="birthday" id="birthday">
                </div>
                <div class="m-row">
                    <label>Phone</label>
                    <input class="w3-input w3-border" type="text" name="phone" id="phone">                
                </div>
                <div class="m-row">
                    <label>Function</label>
                    <select class="w3-input w3-border" id="function" name="function">
                        <% for (let func of funcs) { %>
                            <option value="<%= func.id %>"><%= func.name %></option> 
                        <% } %>           
                    </select>
                </div>
                <div class="m-row">
                    <label>Establishment</label>
                    <select class="w3-input w3-border" id="establishment" name="establishment">
                        <% for (let esta of estas) { %>
                            <option value="<%= esta.id %>"><%= esta.name %></option> 
                        <% } %>           
                    </select>                
                </div>
                <div class="m-row">
                    <label>Email</label>
                    <input class="w3-input w3-border" type="text" name="email" id="email">
                </div>
    
                <div class="m-row">
                    <label>Password</label>
                    <input class="w3-input w3-border" type="password" name="password" id="password">
                </div>   
                
                <div class="m-row">
                    <label>Re-type password</label>
                    <input class="w3-input w3-border" type="password" name="re_password" id="re_password">
                </div>
                <div class="m-row" style="margin-top:35px">                                    
                    <button class="w3-button w3-large w3-border w3-border-teal" type="submit">Add Clinician</button>                   
                </div>
            </form>   
        </div>
    </main>
</body>
<%- include('includes/end.ejs') %>