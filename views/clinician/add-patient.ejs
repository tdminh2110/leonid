<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <div class="main-title">Add a patient</div>
        
        <form class="form-standard" action="/clinician/add-patient" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name">
            </div>
            <div class="form-control">
                <label for="Family name">Family name</label>
                <input type="text" name="family_name" id="family_name">
            </div>            
            <div class="form-control">
                <label for="Birthday">Birthday</label>
                <input type="text" name="birthday" id="birthday">
            </div>            

            <div class="form-control">
                    <label for="Address">Address</label>
                    <input type="text" name="address" id="address">
                </div>

            <div class="form-control">
                <label for="Phone">Phone</label>
                <input type="text" name="phone" id="phone">
            </div>

            <div class="form-control">
                <label for="Email">Email</label>
                <input type="text" name="email" id="email">
            </div>

            <div class="form-control">
                <label for="Password">Password</label>
                <input type="password" name="password" id="password">
            </div>   
            
            <div class="form-control">
                <label for="Re-type Password">Re-type password</label>
                <input type="password" name="re_password" id="re_password">
            </div>

            <div class="form-control">
                <label for="Name of Contact person">Contact Person: Name</label>
                <input type="text" name="cp_name" id="cp_name">
            </div>

            <div class="form-control">
                <label for="Family name of Contact person">Contact Person: Family name</label>
                <input type="text" name="cp_family_name" id="cp_family_name">
            </div>

            <div class="form-control">
                <label for="Address of Contact person">Contact Person: Address</label>
                <input type="text" name="cp_address" id="cp_address">
            </div>

            <div class="form-control">
                <label for="Phone of Contact person">Contact Person: Phone</label>
                <input type="text" name="cp_phone" id="cp_phone">
            </div>

            <div class="form-control">
                <label for="Email of Contact person">Contact Person: Email</label>
                <input type="text" name="cp_email" id="cp_email">
            </div>

            <button class="btn" type="submit">Add Patient</button>
        </form>

        <a href="/logout">Logout</a>
    </main>
</body>
</html>